{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extension_name__",
    "short_name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.12.3.20240504",
    "content_scripts": [
		    {
            "matches": ["<all_urls>"],
            "js": ["src/content/__content-runner.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "page": "dist-bundle/pages/background.html",
        "persistent": true
    },
    "permissions": ["<all_urls>", "activeTab", "tabs", "contextMenus", "storage", "unlimitedStorage", "bookmarks", "downloads", "downloads.shelf", "chrome://favicon/"],
    "browser_action": {
        "default_title": "__MSG_browser_action_title__",
        "default_popup": "dist-bundle/pages/popup.html",
        "default_icon": "images/hash.png"
    },
    "options_ui": {
        "page": "dist-bundle/pages/options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "src/web_accessible_resources/*",
        "src/content/content-*",
        "src/util-ext.js",
        "src/util.js"
    ],
    "omnibox": {
        "keyword": "z"
    },
	  "incognito": "split"
}
