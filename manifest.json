{
    "manifest_version": 2,
    "default_locale": "en",
    "name": "__MSG_extension_name__",
    "short_name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.5.3",
    "content_scripts": [
		{
            "matches": ["<all_urls>"],
            "js": ["content-runner.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "page": "background.html",
        "persistent": true
    },
    "permissions": ["<all_urls>", "activeTab", "tabs", "contextMenus", "storage", "downloads.shelf", "downloads", "unlimitedStorage", "bookmarks", "chrome://favicon/"],
    "browser_action": {
        "default_title": "__MSG_browser_action_title__",
        "default_popup": "popup.html",
        "default_icon": "images/hash.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "web_accessible_resources": [
        "web_accessible_resources/*",
        "content.js",
        "util-ext.js",
        "util.js"
    ],
    "omnibox": {
        "keyword": "z"
    },
	"incognito": "split"
}
